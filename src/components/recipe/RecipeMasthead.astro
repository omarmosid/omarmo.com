---
import { Image } from "astro:assets";
import type { CollectionEntry } from "astro:content";
import FormattedDate from "@/components/FormattedDate.astro";

interface Props {
	content: CollectionEntry<"recipe">;
}

const {
	content: { data },
} = Astro.props;

const dateTimeOptions: Intl.DateTimeFormatOptions = {
	month: "long",
};
---

{
	data.coverImage && (
		<div class="mb-6 aspect-[16/9]">
			<Image
				alt={data.coverImage.alt}
				class="object-cover"
				fetchpriority="high"
				loading="eager"
				src={data.coverImage.src}
			/>
		</div>
	)
}
{data.draft ? <span class="text-base text-red-500">(Draft)</span> : null}
<h1 class="title">
	{data.title}
</h1>
{data.description && <p class="mt-2 italic text-muted-foreground">{data.description}</p>}
<div class="flex flex-wrap items-center gap-x-3 gap-y-2">
	<p class="font-semibold">
		<FormattedDate date={data.publishDate} dateTimeOptions={dateTimeOptions} />
	</p>
	{
		data.updatedDate && (
			<span class="rounded-lg bg-quote/5 px-2 py-1 text-quote">
				Updated:
				<FormattedDate class="ms-1" date={data.updatedDate} dateTimeOptions={dateTimeOptions} />
			</span>
		)
	}
</div>
{
	(data.prepTime || data.cookTime || data.servings || data.cuisine) && (
		<div class="mt-3 flex flex-wrap gap-x-5 gap-y-2 text-sm text-muted-foreground">
			{data.prepTime && <span>Prep: {data.prepTime}</span>}
			{data.cookTime && <span>Cook: {data.cookTime}</span>}
			{data.servings && <span>Servings: {data.servings}</span>}
			{data.cuisine && <span>Cuisine: {data.cuisine}</span>}
		</div>
	)
}
{
	data.ingredients.length > 0 && (
		<div class="mt-4">
			<h2 class="text-lg font-semibold">Ingredients</h2>
			<ul class="mt-2 list-inside list-disc space-y-1 text-sm">
				{data.ingredients.map((item: string) => (
					<li>{item}</li>
				))}
			</ul>
		</div>
	)
}
{
	!!data.tags?.length && (
		<div class="mt-3">
			<svg
				aria-hidden="true"
				class="inline-block h-6 w-6"
				fill="none"
				focusable="false"
				stroke="currentColor"
				stroke-linecap="round"
				stroke-linejoin="round"
				stroke-width="1.5"
				viewBox="0 0 24 24"
				xmlns="http://www.w3.org/2000/svg"
			>
				<path d="M0 0h24v24H0z" fill="none" stroke="none" />
				<path d="M7.859 6h-2.834a2.025 2.025 0 0 0 -2.025 2.025v2.834c0 .537 .213 1.052 .593 1.432l6.116 6.116a2.025 2.025 0 0 0 2.864 0l2.834 -2.834a2.025 2.025 0 0 0 0 -2.864l-6.117 -6.116a2.025 2.025 0 0 0 -1.431 -.593z" />
				<path d="M17.573 18.407l2.834 -2.834a2.025 2.025 0 0 0 0 -2.864l-7.117 -7.116" />
				<path d="M6 9h-.01" />
			</svg>
			{data.tags.map((tag: string, i: number) => (
				<span class="contents">
					<span class="cactus-link inline-block before:content-['#']">{tag}</span>
					{i < data.tags.length - 1 && ", "}
				</span>
			))}
		</div>
	)
}
