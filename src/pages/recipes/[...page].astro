---
import type { CollectionEntry } from "astro:content";
import Pagination from "@/components/Paginator.astro";
import RecipePreview from "@/components/recipe/RecipePreview.astro";
import { getAllRecipes, getUniqueTags } from "@/data/recipe";
import PageLayout from "@/layouts/Base.astro";
import { collectionDateSort } from "@/utils/date";
import type { GetStaticPaths, Page } from "astro";
import { Icon } from "astro-icon/components";

export const getStaticPaths = (async ({ paginate }) => {
	const MAX_RECIPES_PER_PAGE = 10;
	const MAX_TAGS = 7;
	const allRecipes = await getAllRecipes();
	const uniqueTags = getUniqueTags(allRecipes).slice(0, MAX_TAGS);
	return paginate(allRecipes.sort(collectionDateSort), {
		pageSize: MAX_RECIPES_PER_PAGE,
		props: { uniqueTags },
	});
}) satisfies GetStaticPaths;

interface Props {
	page: Page<CollectionEntry<"recipe">>;
	uniqueTags: string[];
}

const { page, uniqueTags } = Astro.props;

const meta = {
	description: "Browse my collection of recipes",
	title: "Recipes",
};

const paginationProps = {
	...(page.url.prev && {
		prevUrl: {
			text: "\u2190 Previous Page",
			url: page.url.prev,
		},
	}),
	...(page.url.next && {
		nextUrl: {
			text: "Next Page \u2192",
			url: page.url.next,
		},
	}),
};
---

<PageLayout meta={meta}>
	<h1 class="title mb-6 flex items-center gap-3">
		Recipes
		<a class="text-accent" href="/recipes/rss.xml" target="_blank">
			<span class="sr-only">RSS feed</span>
			<Icon aria-hidden="true" class="h-6 w-6" focusable="false" name="mdi:rss" />
		</a>
	</h1>
	<div class="grid gap-y-16 sm:grid-cols-[3fr_1fr] sm:gap-x-8">
		<section aria-label="Recipe list">
			<ul class="space-y-4 text-start">
				{
					page.data.map((recipe) => (
						<li class="grid gap-2 sm:grid-cols-[auto_1fr] sm:[&_q]:col-start-2">
							<RecipePreview recipe={recipe} withDesc />
						</li>
					))
				}
			</ul>
			<Pagination {...paginationProps} />
		</section>
		{
			!!uniqueTags.length && (
				<aside>
					<h2 class="title mb-4 flex items-center gap-2 text-lg">
						Tags
						<svg
							aria-hidden="true"
							class="h-6 w-6"
							fill="none"
							stroke="currentColor"
							stroke-linecap="round"
							stroke-linejoin="round"
							stroke-width="1.5"
							viewBox="0 0 24 24"
							xmlns="http://www.w3.org/2000/svg"
						>
							<path d="M0 0h24v24H0z" fill="none" stroke="none" />
							<path d="M7.859 6h-2.834a2.025 2.025 0 0 0 -2.025 2.025v2.834c0 .537 .213 1.052 .593 1.432l6.116 6.116a2.025 2.025 0 0 0 2.864 0l2.834 -2.834a2.025 2.025 0 0 0 0 -2.864l-6.117 -6.116a2.025 2.025 0 0 0 -1.431 -.593z" />
							<path d="M17.573 18.407l2.834 -2.834a2.025 2.025 0 0 0 0 -2.864l-7.117 -7.116" />
							<path d="M6 9h-.01" />
						</svg>
					</h2>
					<ul class="flex flex-wrap gap-2">
						{uniqueTags.map((tag) => (
							<li>
								<span class="cactus-link flex items-center justify-center">#{tag}</span>
							</li>
						))}
					</ul>
				</aside>
			)
		}
	</div>
</PageLayout>
